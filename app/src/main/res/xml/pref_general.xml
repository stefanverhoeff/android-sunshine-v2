<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:key="@string/pref_location_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_location_key" />

    <ListPreference
        android:defaultValue="@string/pref_temp_unit_default"
        android:dialogTitle="@string/pref_temp_unit_dialog_title"
        android:entries="@array/pref_temp_unit_entries"
        android:entryValues="@array/pref_temp_unit_entry_values"
        android:key="@string/pref_temp_unit_key"
        android:title="@string/pref_temp_unit_title"
        />

</PreferenceScreen>